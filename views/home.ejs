<%- include("partials/header.ejs") %>


    <div class="home-container">
        <div class="home-content-container">
            <section>
                <form action="/filter" method="post">
                    <input type="text" placeholder="Search" name="q" class="search-bar">
                    <input type="submit" class="submit-search-btn">
                </form>

                <!-- <form action="/search" method="post">
                    <input type="t">
                </form> -->
            </section>

            <div>
                <div>
                    <div class="filter-by-container">
                        <h1>Recently Updated Shows</h1>



                    </div>
                    <% if(locals.content && locals.pages) {%>
                        <div class="movie-show-list">

                            <div class="movie-container">
                                <% let movieList=content.results.length %>
                                    <% let movieResult=content.results %>
                                        <% for(let i=0; i< movieList; i++){ %>
                                            <div class="movie-item">

                                                <img src="<%= movieResult[i].image.medium %>" alt="" id="movie-img">
                                                <p id="movie-title">
                                                    <%= movieResult[i].name.slice(0, 27) %>
                                                </p>
                                            </div>
                                            <% } %>
                            </div>

                        </div>


                        <div class="pagination-container">

                            <ul class="content-container">



                                <% for(var i=1; i<pages+1; i++){ %>
                                    <li>
                                        <button onclick="dead(<%= i %>)">

                                            <%= i %>

                                        </button>
                                    </li>
                                    <% } %>


                            </ul>

                        </div>
                        <% } %>
                </div>
            </div>
        </div>

    </div>

    <%- include("partials/footer.ejs") %>